---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - Atom">
	<div class="container">
		<h1>Contact Us</h1>
		<p class="subtitle">Get in touch with our team</p>

		<div class="contact-grid">
			<div class="contact-info">
				<h2>Contact Information</h2>
				<div class="info-item">
					<h3>Address</h3>
					<p>123 Innovation Street<br>Tech City, TC 12345</p>
				</div>
				<div class="info-item">
					<h3>Email</h3>
					<p>info@atomcompany.com</p>
				</div>
				<div class="info-item">
					<h3>Phone</h3>
					<p>+1 (555) 123-4567</p>
				</div>
			</div>

			<div class="contact-form">
				<h2>Send us a message</h2>
				<form>
					<div class="form-group">
						<label for="name">Name</label>
						<input type="text" id="name" name="name" required>
					</div>
					<div class="form-group">
						<label for="email">Email</label>
						<input type="email" id="email" name="email" required>
					</div>
					<div class="form-group">
						<label for="message">Message</label>
						<textarea id="message" name="message" rows="5" required></textarea>
					</div>
					<button type="submit" class="btn">Send Message</button>
				</form>
			</div>
		</div>
	</div>
</Layout>

<style>
	h1 {
		color: var(--primary);
		font-size: 2.5rem;
		margin: 2rem 0 1rem;
		text-align: center;
	}

	.subtitle {
		text-align: center;
		color: var(--text);
		margin-bottom: 3rem;
		font-size: 1.2rem;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 4rem;
		margin-top: 2rem;
	}

	.contact-info h2,
	.contact-form h2 {
		color: var(--primary);
		margin-bottom: 2rem;
	}

	.info-item {
		margin-bottom: 2rem;
	}

	.info-item h3 {
		color: var(--secondary);
		margin-bottom: 0.5rem;
	}

	.form-group {
		margin-bottom: 1.5rem;
	}

	label {
		display: block;
		margin-bottom: 0.5rem;
		color: var(--text);
	}

	input,
	textarea {
		width: 100%;
		padding: 0.8rem;
		border: 1px solid var(--neutral);
		border-radius: 4px;
		font-family: inherit;
		background-color: white;
	}

	input:focus,
	textarea:focus {
		outline: none;
		border-color: var(--primary);
	}

	button[type="submit"] {
		width: 100%;
		border: none;
		cursor: pointer;
	}
</style>