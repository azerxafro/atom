---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - Atom">
	<div class="container">
		<h1>Contact Us</h1>
		<p class="subtitle">Get in touch with our team</p>

		<div class="contact-grid">
			<div class="contact-info">
				<h2>Contact Information</h2>
				<div class="info-item">
					<h3>Address</h3>
					<p>123 Innovation Street<br>Tech City, TC 12345</p>
				</div>
				<div class="info-item">
					<h3>Email</h3>
					<a href="mailto:info@atomcompany.com" class="contact-link">info@atomcompany.com</a>
				</div>
				<div class="info-item">
					<h3>Phone</h3>
					<a href="tel:+15551234567" class="contact-link">+1 (555) 123-4567</a>
				</div>
			</div>

			<div class="contact-form">
				<h2>Send us a message</h2>
				<form id="contactForm" novalidate>
					<div class="form-group">
						<label for="name">Name</label>
						<input 
							type="text" 
							id="name" 
							name="name" 
							required 
							minlength="2"
							autocomplete="name"
							pattern="[A-Za-z\s]+"
						>
					</div>
					<div class="form-group">
						<label for="email">Email</label>
						<input 
							type="email" 
							id="email" 
							name="email" 
							required
							autocomplete="email"
						>
					</div>
					<div class="form-group">
						<label for="message">Message</label>
						<textarea 
							id="message" 
							name="message" 
							rows="5" 
							required
							minlength="10"
						></textarea>
					</div>
					<button type="submit" class="btn">Send Message</button>
				</form>
			</div>
		</div>
	</div>
</Layout>

<script>
	const form = document.getElementById('contactForm') as HTMLFormElement;
	const inputs = form?.querySelectorAll('input, textarea');

	inputs?.forEach(input => {
		input.addEventListener('invalid', (e) => {
			e.preventDefault();
			input.classList.add('error');
		});

		input.addEventListener('input', () => {
			input.classList.remove('error');
		});
	});

	form?.addEventListener('submit', (e) => {
		e.preventDefault();
		if (form.checkValidity()) {
			// Handle form submission
			console.log('Form submitted');
		} else {
			// Show validation messages
			form.reportValidity();
		}
	});
</script>

<style>
	h1 {
		color: var(--primary);
		font-size: 2rem;
		margin: 2rem 0 1rem;
		text-align: center;
	}

	.subtitle {
		text-align: center;
		color: var(--text);
		margin-bottom: 3rem;
		font-size: 1.1rem;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 3rem;
		margin-top: 2rem;
	}

	.contact-info h2,
	.contact-form h2 {
		color: var(--primary);
		margin-bottom: 2rem;
		font-size: 1.5rem;
	}

	.info-item {
		margin-bottom: 2rem;
	}

	.info-item h3 {
		color: var(--secondary);
		margin-bottom: 0.5rem;
		font-size: 1.1rem;
	}

	.contact-link {
		color: var(--primary);
		text-decoration: none;
		display: inline-block;
		padding: 0.5rem 0;
		font-size: 1rem;
	}

	.form-group {
		margin-bottom: 1.5rem;
	}

	label {
		display: block;
		margin-bottom: 0.5rem;
		color: var(--text);
		font-size: 1rem;
	}

	input,
	textarea {
		width: 100%;
		padding: 0.8rem;
		border: 2px solid var(--neutral);
		border-radius: 4px;
		font-family: inherit;
		font-size: 1rem;
		background-color: white;
		transition: border-color 0.3s ease;
		-webkit-appearance: none;
	}

	input:focus,
	textarea:focus {
		outline: none;
		border-color: var(--primary);
	}

	input.error,
	textarea.error {
		border-color: #ff3333;
	}

	@media (max-width: 768px) {
		.contact-grid {
			gap: 2rem;
		}

		input,
		textarea,
		button {
			font-size: 16px;
			padding: 0.8rem;
		}

		.contact-link {
			padding: 0.8rem 0;
		}
	}

	@media (hover: none) {
		.contact-link {
			min-height: 44px;
			display: flex;
			align-items: center;
		}
	}
</style>