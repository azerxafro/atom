---
import Layout from '../layouts/Layout.astro';

const ventures = [
	{
		title: "Atom Imagixio",
		description: "Cutting-edge software solutions and digital innovations",
		link: "#",
		logo: "/atom-imagixio-logo.png"
	},
	{
		title: "Atom Mobile",
		description: "Just Fix it!",
		link: "#",
		logo: "/atom-mobile-logo.png"
	},
	{
		title: "Atom Melon",
		description: "Revolutionary beauty & healthcare technology and services",
		link: "#",
		logo: "/atom-melon-logo.png"
	},
	{
		title: "Atom Optimus",
		description: "Modern solutions and investment strategies",
		link: "#",
		logo: "/atom-optimus-logo.png"
	}
];
---

<Layout title="Our Ventures - Atom">
	<div class="container">
		<h1>Our Ventures</h1>
		<p class="subtitle">Discover our diverse portfolio of innovative companies</p>
		
		<div class="ventures-grid">
			{ventures.map(venture => (
				<div class="venture-card">
					<div class="venture-logo">
						<img src={venture.logo} alt={`${venture.title} Logo`} />
					</div>
					<p>{venture.description}</p>
					<a href={venture.link} class="btn btn-accent">Learn More</a>
				</div>
			))}
		</div>
	</div>
</Layout>

<style>
	h1 {
		color: var(--primary);
		font-size: 2.5rem;
		margin: 2rem 0 1rem;
		text-align: center;
	}

	.subtitle {
		text-align: center;
		color: var(--text);
		margin-bottom: 3rem;
		font-size: 1.2rem;
	}

	.ventures-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.venture-card {
		background-color: white;
		border: 1px solid var(--neutral);
		border-radius: 8px;
		padding: 2rem;
		transition: transform 0.3s ease;
		box-shadow: 0 2px 4px rgba(255, 102, 0, 0.1);
		text-align: center;
	}

	.venture-card:hover {
		transform: translateY(-5px);
	}

	.venture-logo {
		margin-bottom: 1.5rem;
	}

	.venture-logo img {
		height: 60px;
		width: auto;
		margin: 0 auto;
	}

	.venture-card p {
		margin-bottom: 1.5rem;
		color: var(--text);
	}
</style>