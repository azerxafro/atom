---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Atom - Innovating Across Industries">
	<div class="hero">
		<div class="hero-content">
			<h1>Welcome to <img src="/atom-logo-white.png" alt="Atom" class="hero-logo" /></h1>
			<p>Innovating across industries, powering the future</p>
			<a href="/ventures" class="btn">Explore Our Ventures</a>
		</div>
	</div>

	<div class="container">
		<section class="features">
			<h2>Why Choose Atom?</h2>
			<div class="feature-grid">
				<div class="feature-card">
					<h3>Innovation</h3>
					<p>Pushing boundaries and creating breakthrough solutions</p>
				</div>
				<div class="feature-card">
					<h3>Excellence</h3>
					<p>Committed to delivering exceptional quality</p>
				</div>
				<div class="feature-card">
					<h3>Impact</h3>
					<p>Making a difference across multiple industries</p>
				</div>
			</div>
		</section>
	</div>
</Layout>

<style>
	.hero {
		background-color: var(--primary);
		color: white;
		padding: 6rem 2rem;
		text-align: center;
		background-image: linear-gradient(135deg, var(--primary), var(--secondary));
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
	}

	.hero-logo {
		height: 2rem;
		width: auto;
		vertical-align: middle;
	}

	.hero p {
		font-size: 1.5rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.features {
		padding: 4rem 0;
	}

	.features h2 {
		text-align: center;
		margin-bottom: 3rem;
		font-size: 2.5rem;
		color: var(--primary);
	}

	.feature-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.feature-card {
		background-color: white;
		padding: 2rem;
		border-radius: 8px;
		text-align: center;
		box-shadow: 0 2px 4px rgba(255, 102, 0, 0.1);
		transition: transform 0.3s ease;
	}

	.feature-card:hover {
		transform: translateY(-5px);
	}

	.feature-card h3 {
		color: var(--primary);
		margin-bottom: 1rem;
	}
</style>