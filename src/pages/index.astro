---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Atom - Innovating Across Industries">
	<div class="hero">
		<div class="hero-content">
			<div class="hero-title">
				<h1>Welcome to</h1>
				<img 
					src="/atom-logo-white.png" 
					alt="Atom" 
					class="hero-logo" 
					width="160"
					height="53"
					loading="eager"
				/>
			</div>
			<p class="hero-tagline">Innovating across industries, powering the future</p>
			<a href="/ventures" class="btn btn-hero">Explore Our Ventures</a>
		</div>
	</div>

	<div class="container">
		<section class="features">
			<h2>Why Choose Atom?</h2>
			<div class="feature-grid">
				<div class="feature-card">
					<h3>Innovation</h3>
					<p>Pushing boundaries and creating breakthrough solutions</p>
				</div>
				<div class="feature-card">
					<h3>Excellence</h3>
					<p>Committed to delivering exceptional quality</p>
				</div>
				<div class="feature-card">
					<h3>Impact</h3>
					<p>Making a difference across multiple industries</p>
				</div>
			</div>
		</section>
	</div>
</Layout>

<style>
	.hero {
		background-color: var(--primary);
		color: white;
		min-height: 60vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 3rem 1rem;
		text-align: center;
		background-image: linear-gradient(135deg, var(--primary), var(--secondary));
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.hero-title {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}

	.hero h1 {
		font-size: 2rem;
		margin: 0;
		line-height: 1.2;
	}

	.hero-logo {
		height: auto;
		max-width: 160px;
		width: 100%;
	}

	.hero-tagline {
		font-size: 1.25rem;
		line-height: 1.4;
		margin-bottom: 2rem;
		opacity: 0.9;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.btn-hero {
		font-size: 1.125rem;
		padding: 1rem 2rem;
		min-height: 3rem;
		min-width: 200px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		border-radius: 8px;
		background-color: white;
		color: var(--primary);
		font-weight: 600;
		transition: transform 0.2s ease, background-color 0.2s ease;
	}

	.btn-hero:hover {
		background-color: var(--neutral);
		transform: translateY(-2px);
	}

	.features {
		padding: 4rem 0;
	}

	.features h2 {
		text-align: center;
		margin-bottom: 3rem;
		font-size: 2rem;
		color: var(--primary);
	}

	.feature-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.feature-card {
		background-color: white;
		padding: 2rem;
		border-radius: 8px;
		text-align: center;
		box-shadow: 0 2px 4px rgba(255, 102, 0, 0.1);
		transition: transform 0.3s ease;
	}

	.feature-card:hover {
		transform: translateY(-5px);
	}

	.feature-card h3 {
		color: var(--primary);
		margin-bottom: 1rem;
	}

	/* Mobile optimizations */
	@media (max-width: 768px) {
		.hero {
			min-height: 70vh;
			padding: 2rem 1rem;
		}

		.hero h1 {
			font-size: 1.75rem;
		}

		.hero-logo {
			max-width: 140px;
		}

		.hero-tagline {
			font-size: 1.125rem;
			margin-bottom: 1.75rem;
			padding: 0 0.5rem;
		}

		.btn-hero {
			width: 100%;
			max-width: 300px;
		}
	}

	/* Small mobile devices */
	@media (max-width: 480px) {
		.hero {
			min-height: 60vh;
			padding: 1.5rem 1rem;
		}

		.hero-title {
			gap: 0.75rem;
		}

		.hero h1 {
			font-size: 1.5rem;
		}

		.hero-logo {
			max-width: 120px;
		}

		.hero-tagline {
			font-size: 1rem;
			margin-bottom: 1.5rem;
		}

		.btn-hero {
			font-size: 1rem;
			padding: 0.875rem 1.5rem;
		}
	}

	/* Touch optimization */
	@media (hover: none) {
		.btn-hero {
			min-height: 44px;
			padding: 0.875rem 1.5rem;
		}

		.btn-hero:hover {
			transform: none;
		}

		.feature-card:hover {
			transform: none;
		}
	}
</style>